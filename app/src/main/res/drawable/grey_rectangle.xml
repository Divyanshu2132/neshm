<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#e0e0e0"/>
        </shape>
    </item>
    <item
            android:left="1dp"
            android:right="1dp"
            android:top="1dp"
            android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
</layer-list>